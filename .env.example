# Spotify API Credentials (for Daily Song feature)
# Get these from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Comma-separated list of Spotify playlist IDs to pull songs from
# These are global playlists (Top 50, Viral, etc.)
# NOTE: Only used if SEED_TRACKS is NOT set
SPOTIFY_PLAYLIST_IDS=37i9dQZF1DXcBWIGoYBM5M,37i9dQZEVXbMDoHDwVN2tF,37i9dQZF1DWUa8ZRTfalHk,37i9dQZF1DX4JAvHpjipBk

# Personalized seed tracks (optional, overrides playlists)
# Format: Spotify URLs or track IDs, comma/space/newline separated
# Max 100 tracks, extracts IDs via regex
# Example:
# SEED_TRACKS="https://open.spotify.com/track/6usohdchdzW9oML7VC4Uhk,1BxfuPKGuaTgP7aM0Bbdwr,0yLdNVWF3Srea0uzk55zFn"
# See docs/SEED-TRACKS.md for full guide
SEED_TRACKS=

# Filter explicit content (true = exclude explicit tracks)
DISALLOW_EXPLICIT=true

# Minimum popularity (0-100, only used in playlist mode)
POP_MIN=70

# Require CZ market availability (true = only tracks playable in Czechia)
REQUIRE_CZ=true

# Disable cache (for testing, true = no-store headers)
DEBUG_NO_CACHE=false

# Platform (for build configuration)
VITE_PLATFORM=netlify
